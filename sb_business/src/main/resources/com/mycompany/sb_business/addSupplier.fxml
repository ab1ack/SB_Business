<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Pane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.sb_business.AddSupplierController">
   <children>
      <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="158.0" prefWidth="280.0" spacing="5.0">
         <children>
            <Label text="Please provide supplier information" />
            <HBox prefHeight="27.0" prefWidth="250.0" spacing="35.0">
               <children>
                  <AnchorPane prefHeight="27.0" prefWidth="250.0">
                     <children>
                        <Label layoutY="4.0" prefHeight="18.0" prefWidth="77.0" text="Supplier ID:" />
                        <TextField fx:id="supplier_id" layoutX="92.0" prefHeight="26.0" prefWidth="157.0" promptText="Enter Unique ID (Ex. Juan)" />
                     </children>
                  </AnchorPane>
               </children>
            </HBox>
            <VBox spacing="5.0">
               <children>
                  <HBox prefHeight="27.0" prefWidth="250.0" spacing="35.0">
                     <children>
                        <AnchorPane prefHeight="27.0" prefWidth="250.0">
                           <children>
                              <Label layoutY="4.0" prefHeight="18.0" prefWidth="77.0" text="Name:" />
                              <TextField fx:id="supplier_name" layoutX="92.0" prefHeight="26.0" prefWidth="157.0" promptText="Enter Name (Ex. Juan Jr)" />
                           </children>
                        </AnchorPane>
                     </children>
                  </HBox>
                  <Label fx:id="errorMsg" alignment="TOP_CENTER" contentDisplay="RIGHT" focusTraversable="false" prefHeight="18.0" prefWidth="254.0" textFill="#cf3232" wrapText="true">
                     <font>
                        <Font size="10.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            <HBox alignment="TOP_RIGHT" spacing="3.0">
               <children>
                  <Button fx:id="action_btn" defaultButton="true" mnemonicParsing="false" text="Add" />
                  <Button fx:id="cancel_btn" cancelButton="true" mnemonicParsing="false" onAction="#cancel" text="Cancel" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </VBox>
   </children>
</Pane>
